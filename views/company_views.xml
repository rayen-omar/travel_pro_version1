<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_tree" model="ir.ui.view">
        <field name="name">company.tree</field>
        <field name="model">travel.company</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="vat"/>
            </tree>
        </field>
    </record>
    
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">company.form</field>
        <field name="model">travel.company</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_create_member" type="object" string="Créer Membre" class="oe_highlight btn-primary"/>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="address"/>
                        <field name="website"/>
                        <field name="vat"/>
                        <field name="member_ids">
                            <tree>
                                <field name="name"/>
                                <field name="email"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vue recherche -->
    <record id="view_company_search" model="ir.ui.view">
        <field name="name">company.search</field>
        <field name="model">travel.company</field>
        <field name="arch" type="xml">
            <search string="Rechercher Sociétés">
                <field name="name" string="Nom" filter_domain="[('name', 'ilike', self)]"/>
                <field name="vat" string="Matricule Fiscale" filter_domain="[('vat', 'ilike', self)]"/>
                <field name="email" string="Email"/>
                <field name="phone" string="Téléphone"/>
                <separator/>
                <field name="name" string="Recherche globale" 
                       filter_domain="['|', ('name', 'ilike', self), ('vat', 'ilike', self)]"/>
            </search>
        </field>
    </record>
</odoo>