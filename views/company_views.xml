<odoo>
    <record id="view_company_tree" model="ir.ui.view">
        <field name="name">company.tree</field>
        <field name="model">travel.company</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>
    
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">company.form</field>
        <field name="model">travel.company</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- BOUTON CRÃ‰ER MEMBRE -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_member" 
                                type="object" 
                                string="CrÃ©er Membre" 
                                class="oe_highlight btn-primary"/>
                    </div>
                    
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="address"/>
                        <field name="website"/>
                        <field name="member_ids">
                            <tree>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>