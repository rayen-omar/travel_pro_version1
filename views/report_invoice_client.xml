<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template QWeb pour le rapport de facture client -->
    <template id="report_travel_invoice_client">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
            <div class="article">
                <style>
                    @media print {
                        .page { page-break-inside: avoid; }
                        .row { page-break-inside: avoid; }
                        table { page-break-inside: avoid; }
                        tr { page-break-inside: avoid; }
                    }
                </style>
                <div class="page" style="padding: 15px 20px; font-family: Arial, sans-serif; font-size: 12px;">
                <!-- Logo de l'entreprise -->
                <div class="row mb-2" style="margin-bottom: 15px;">
                    <div class="col-12 text-center">
                        <img src="/travel_pro_version1/static/src/img/logo_we_can_travel.png" alt="Logo We Can Travel" style="max-width: 300px; max-height: 120px;"/>
                    </div>
                </div>
                
                <!-- En-tête principal -->
                <div class="row mb-2" style="border-bottom: 1px solid #e0e0e0; padding-bottom: 10px; margin-bottom: 15px;">
                    <div class="col-8">
                        <h1 style="margin: 0; font-size: 18px; font-weight: 600; color: #333;">
                            Facture - <span t-field="o.name"/>
                        </h1>
                        <div style="margin-top: 5px;">
                            <span style="display: inline-block; padding: 4px 12px; background-color: #2196F3; color: white; border-radius: 12px; font-size: 12px; font-weight: 500;">
                                <span t-if="o.state == 'draft'">Brouillon</span>
                                <span t-if="o.state == 'confirmed'">Confirmée</span>
                                <span t-if="o.state == 'paid'">Payée</span>
                                <span t-if="o.state == 'cancel'">Annulée</span>
                            </span>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div style="margin-bottom: 4px;">
                            <span style="color: #666; font-size: 11px;">Date:</span>
                            <span style="font-weight: 500; margin-left: 5px; font-size: 11px;" t-field="o.date_invoice"/>
                        </div>

                    </div>
                </div>
                
                <!-- Informations vendeur et client -->
                <div class="row mb-2">
                    <!-- Informations vendeur -->
                    <div class="col-6" style="padding-right: 15px;">
                        <div style="margin-bottom: 8px;">
                            <div style="color: #666; font-size: 10px; margin-bottom: 3px;">Vendeur</div>
                            <div style="font-weight: 600; font-size: 13px; margin-bottom: 4px;" t-if="o.company_name_seller">
                                <span t-field="o.company_name_seller"/>
                            </div>
                            <div style="color: #666; font-size: 11px; line-height: 1.4;">
                                <div t-if="o.company_address_seller" t-esc="o.company_address_seller"/>
                                <div t-if="o.company_vat_seller" style="margin-top: 4px;">
                                    <strong>Code TVA:</strong> <span t-field="o.company_vat_seller"/>
                                </div>
                                <div t-if="o.company_phone_seller">
                                    <strong>Tél:</strong> <span t-field="o.company_phone_seller"/>
                                </div>
                                <div t-if="o.company_mobile_seller">
                                    <strong>Mobile:</strong> <span t-field="o.company_mobile_seller"/>
                                </div>
                                <div t-if="o.company_email_seller">
                                    <strong>Email:</strong> <span t-field="o.company_email_seller"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Informations client -->
                    <div class="col-6" style="padding-left: 15px;">
                        <div style="margin-bottom: 8px;">
                            <div style="color: #666; font-size: 10px; margin-bottom: 3px;">Client</div>
                            <div style="font-weight: 600; font-size: 13px; margin-bottom: 4px;" t-if="o.travel_company_id">
                                <span t-field="o.travel_company_id.name"/>
                            </div>
                            <div style="color: #666; font-size: 11px; line-height: 1.4;">
                                <div t-if="o.company_address" t-esc="o.company_address"/>
                                <div t-if="o.company_vat_number" style="margin-top: 4px;">
                                    <strong>Matricule Fiscal:</strong> <span t-field="o.company_vat_number"/>
                                </div>
                                <div t-if="o.company_phone">
                                    <strong>Tél:</strong> <span t-field="o.company_phone"/>
                                </div>
                                <div t-if="o.company_mobile">
                                    <strong>Mobile:</strong> <span t-field="o.company_mobile"/>
                                </div>
                                <div t-if="o.company_email">
                                    <strong>Email:</strong> <span t-field="o.company_email"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Membres facturés (optionnel) -->
                <div class="row mb-2" t-if="o.member_ids">
                    <div class="col-12">
                        <div style="color: #666; font-size: 10px; margin-bottom: 3px;">Membres</div>
                        <div style="font-size: 11px;">
                            <t t-foreach="list(o.member_ids)" t-as="member">
                                <span t-esc="member.name"/>
                                <span t-if="not member_last">, </span>
                            </t>
                        </div>
                    </div>
                </div>
                
                <!-- Tableau des lignes de facturation -->
                <div class="row mb-2">
                    <div class="col-12">
                        <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                            <thead>
                                <tr style="background-color: #f5f5f5; border-bottom: 2px solid #ddd;">
                                    <th style="padding: 6px 4px; text-align: left; font-weight: 600; font-size: 11px; color: #333; width: 12%;">Membre</th>
                                    <th style="padding: 6px 4px; text-align: left; font-weight: 600; font-size: 11px; color: #333; width: 12%;">Voyage</th>
                                    <th style="padding: 6px 4px; text-align: left; font-weight: 600; font-size: 11px; color: #333; width: 10%;">Référence</th>
                                    <th style="padding: 6px 4px; text-align: left; font-weight: 600; font-size: 11px; color: #333; width: 22%;">Description</th>
                                    <th style="padding: 6px 4px; text-align: right; font-weight: 600; font-size: 11px; color: #333; width: 11%;">Prix TTC Saisi</th>
                                    <th style="padding: 6px 4px; text-align: center; font-weight: 600; font-size: 11px; color: #333; width: 5%;">TVA</th>
                                    <th style="padding: 6px 4px; text-align: right; font-weight: 600; font-size: 11px; color: #333; width: 14%;">Total HT</th>
                                    <th style="padding: 6px 4px; text-align: right; font-weight: 600; font-size: 11px; color: #333; width: 14%;">Montant TVA</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <tr style="border-bottom: 1px solid #e0e0e0;">
                                        <td style="padding: 6px 4px; font-size: 11px;">
                                            <span t-field="line.passenger_id.name"/>
                                        </td>
                                        <td style="padding: 6px 4px; font-size: 11px;">
                                            <span t-field="line.destination_id.name"/>
                                        </td>
                                        <td style="padding: 6px 4px; font-size: 11px;">
                                            <span t-field="line.reference"/>
                                        </td>
                                        <td style="padding: 6px 4px; font-size: 11px;">
                                            <span t-field="line.description"/>
                                        </td>
                                        <td style="padding: 6px 4px; text-align: right; font-size: 11px;">
                                            <span t-field="line.price_ttc" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td style="padding: 6px 4px; text-align: center; font-size: 11px;">
                                            <span t-field="line.tax_rate"/>%
                                        </td>
                                        <td style="padding: 6px 4px; text-align: right; font-size: 11px;">
                                            <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td style="padding: 6px 4px; text-align: right; font-size: 11px;">
                                            <span t-field="line.price_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Totaux -->
                <div class="row mt-2">
                    <div class="col-7"></div>
                    <div class="col-5">
                        <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                            <tr>
                                <td style="padding: 4px 0; text-align: right; font-size: 11px; color: #666;">Sous Total HT</td>
                                <td style="padding: 4px 0; text-align: right; font-size: 11px; font-weight: 500; padding-left: 15px; width: 100px;">
                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 4px 0; text-align: right; font-size: 11px; color: #666;">
                                    Montant TVA
                                    <span t-if="o.invoice_line_ids">
                                        (<span t-esc="o.invoice_line_ids[0].tax_rate if o.invoice_line_ids else '0'"/>%)
                                    </span>
                                </td>
                                <td style="padding: 4px 0; text-align: right; font-size: 11px; font-weight: 500; padding-left: 15px;">
                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.amount_tax"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 4px 0; text-align: right; font-size: 11px; color: #666; font-weight: 600;">Total TTC</td>
                                <td style="padding: 4px 0; text-align: right; font-size: 11px; font-weight: 600; padding-left: 15px;">
                                    <span t-esc="o.amount_untaxed + o.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr t-if="o.fiscal_stamp and o.fiscal_stamp > 0">
                                <td style="padding: 4px 0; text-align: right; font-size: 11px; color: #666;">Timbre Fiscal</td>
                                <td style="padding: 4px 0; text-align: right; font-size: 11px; font-weight: 500; padding-left: 15px;">
                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.fiscal_stamp"/>
                                </td>
                            </tr>
                            <tr style="border-top: 1px solid #333;">
                                <td style="padding: 8px 0; text-align: right; font-size: 12px; font-weight: 700;">Montant Final (HT + TVA + Timbre)</td>
                                <td style="padding: 8px 0; text-align: right; font-size: 12px; font-weight: 700; padding-left: 15px;">
                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.amount_total"/>
                                </td>
                            </tr>

                            <t t-if="o.apply_withholding_tax or o.apply_vat_withholding">
                                <tr>
                                    <td colspan="2" style="padding: 4px 0; border-top: 1px solid #e0e0e0;"></td>
                                </tr>
                                <t t-if="o.apply_withholding_tax">
                                    <tr>
                                        <td style="padding: 4px 0; text-align: right; font-size: 11px; color: #666;">Retenue 1%</td>
                                        <td style="padding: 4px 0; text-align: right; font-size: 11px; font-weight: 500; padding-left: 15px;">
                                            <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.withholding_tax_amount"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="o.apply_vat_withholding">
                                    <tr>
                                        <td style="padding: 4px 0; text-align: right; font-size: 11px; color: #666;">Retenue 25% TVA</td>
                                        <td style="padding: 4px 0; text-align: right; font-size: 11px; font-weight: 500; padding-left: 15px;">
                                            <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.vat_withholding_amount"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td style="padding: 4px 0; text-align: right; font-size: 11px; color: #666;">Total Retenues</td>
                                    <td style="padding: 4px 0; text-align: right; font-size: 11px; font-weight: 500; padding-left: 15px;">
                                        <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.total_withholding"/>
                                    </td>
                                </tr>
                            </t>

                            <t t-if="o.apply_withholding_tax or o.apply_vat_withholding">
                                <tr style="border-top: 2px solid #4CAF50; background-color: #f1f8f4;">
                                    <td style="padding: 6px 0; text-align: right; font-size: 13px; font-weight: 600; color: #2e7d32;">Net à Payer</td>
                                    <td style="padding: 6px 0; text-align: right; font-size: 13px; font-weight: 600; color: #2e7d32; padding-left: 15px;">
                                        <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.net_to_pay"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>
                
                <!-- Montant en lettres -->
                <div class="row mt-2" t-if="o.amount_in_words_fr">
                    <div class="col-12" style="margin-top: 10px; padding-top: 8px; border-top: 1px solid #e0e0e0;">
                        <div style="font-size: 11px; color: #666;">
                            <strong>Arrêté la présente facture à la somme de:</strong> 
                            <span style="color: #333;" t-field="o.amount_in_words_fr"/>
                        </div>
                    </div>
                </div>
                
                <!-- Informations bancaires et notes -->
                <div class="row mt-2" style="margin-top: 10px; padding-top: 8px; border-top: 1px solid #e0e0e0;">
                    <div class="col-6" t-if="o.company_bank_name or o.company_bank_iban">
                        <div style="color: #666; font-size: 10px; margin-bottom: 4px; font-weight: 600;">Informations bancaires</div>
                        <div style="font-size: 11px; line-height: 1.4;">
                            <div t-if="o.company_bank_name" style="margin-bottom: 3px;">
                                <strong>Banque:</strong> <span t-field="o.company_bank_name"/>
                            </div>
                            <div t-if="o.company_bank_iban" style="margin-bottom: 3px;">
                                <strong>IBAN:</strong> <span t-field="o.company_bank_iban"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-6" t-if="o.note">
                        <div style="color: #666; font-size: 10px; margin-bottom: 4px; font-weight: 600;">Notes</div>
                        <div style="font-size: 11px; line-height: 1.4; color: #333;" t-esc="o.note"/>
                    </div>
                </div>
                </div>
            </div>
            </t>
        </t>
    </template>
    
    <!-- Action de rapport -->
    <record id="action_report_travel_invoice_client" model="ir.actions.report">
        <field name="name">Facture Client Travel</field>
        <field name="model">travel.invoice.client</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">travel_pro_version1.report_travel_invoice_client</field>
        <field name="report_file">travel_pro_version1.report_travel_invoice_client</field>
    </record>
</odoo>
