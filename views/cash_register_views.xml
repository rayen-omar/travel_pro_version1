<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions (définies en premier pour être disponibles dans les vues) -->
    <!-- Action pour les Opérations -->
    <record id="action_cash_register_operation" model="ir.actions.act_window">
        <field name="name">Opérations de Caisse</field>
        <field name="res_model">cash.register.operation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle opération
            </p>
            <p>
                Enregistrez les recettes et dépenses de la caisse avec les références appropriées.
            </p>
        </field>
    </record>

    <!-- Action pour les Caisses (définie avant les vues qui l'utilisent) -->
    <!-- Note: search_view_id sera ajouté plus tard après la définition de view_cash_register_search -->
    <record id="action_cash_register" model="ir.actions.act_window">
        <field name="name">Caisses</field>
        <field name="res_model">cash.register</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_opened': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle caisse
            </p>
            <p>
                Les caisses permettent de gérer les recettes et dépenses de l'agence.
                Le système comprend une caisse principale et exactement deux sous-caisses.
                La caisse principale contrôle l'ouverture et la fermeture de toutes les sous-caisses.
            </p>
        </field>
    </record>

    <!-- Vue Liste des Caisses -->
    <record id="view_cash_register_tree" model="ir.ui.view">
        <field name="name">cash.register.tree</field>
        <field name="model">cash.register</field>
        <field name="arch" type="xml">
            <tree string="Caisses" decoration-info="is_main == True" decoration-muted="state == 'closed'">
                <field name="name"/>
                <field name="code"/>
                <field name="is_main" invisible="1"/>
                <field name="main_cash_id"/>
                <field name="sub_cash_count" string="Sous-Caisses" attrs="{'invisible': [('is_main', '=', False)]}"/>
                <field name="user_id"/>
                <field name="state" widget="badge" decoration-success="state == 'opened'" decoration-danger="state == 'closed'"/>
                <field name="opening_balance"/>
                <field name="total_receipts" sum="Total Recettes"/>
                <field name="total_expenses" sum="Total Dépenses"/>
                <field name="balance" sum="Solde Total"/>
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire des Caisses -->
    <record id="view_cash_register_form" model="ir.ui.view">
        <field name="name">cash.register.form</field>
        <field name="model">cash.register</field>
        <field name="arch" type="xml">
            <form string="Caisse">
                <header>
                    <button name="action_open_cash" string="Ouvrir la Caisse" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '=', 'opened')]}"/>
                    <button name="action_close_cash" string="Fermer la Caisse" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '=', 'closed'), ('is_main', '=', False)]}"/>
                    <button name="action_close_sub_cash" string="Fermer la Sous-Caisse" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '=', 'closed'), ('is_main', '=', True)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="opened,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="%(travel_pro_version1.action_cash_register_operation)d" 
                                icon="fa-money" context="{'default_cash_register_id': active_id, 'default_type': 'receipt', 'search_default_cash_register_id': active_id}">
                            <field name="total_receipts" widget="statinfo" string="Recettes"/>
                        </button>
                        <button class="oe_stat_button" type="action" name="%(travel_pro_version1.action_cash_register_operation)d" 
                                icon="fa-credit-card" context="{'default_cash_register_id': active_id, 'default_type': 'expense', 'search_default_cash_register_id': active_id}">
                            <field name="total_expenses" widget="statinfo" string="Dépenses"/>
                        </button>
                        <button class="oe_stat_button" type="action" name="%(travel_pro_version1.action_cash_register)d" 
                                icon="fa-sitemap" attrs="{'invisible': [('is_main', '=', False)]}"
                                context="{'search_default_main': False, 'search_default_main_cash_filter': active_id}">
                            <field name="sub_cash_count" widget="statinfo" string="Sous-Caisses"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="is_main"/>
                            <field name="main_cash_id" attrs="{'required': [('is_main', '=', False)], 'invisible': [('is_main', '=', True)]}"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="opening_date" readonly="1"/>
                            <field name="opening_user_id" readonly="1"/>
                            <field name="opening_balance"/>
                            <field name="closing_date" readonly="1"/>
                            <field name="closing_user_id" readonly="1"/>
                            <field name="closing_balance" readonly="1"/>
                            <field name="balance" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sous-Caisses" name="sub_cashes" attrs="{'invisible': [('is_main', '=', False)]}">
                            <field name="sub_cash_ids" nolabel="1">
                                <tree string="Sous-Caisses" create="1" delete="1">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="user_id"/>
                                    <field name="state" widget="badge" decoration-success="state == 'opened'" decoration-danger="state == 'closed'"/>
                                    <field name="opening_balance"/>
                                    <field name="total_receipts" sum="Total Recettes"/>
                                    <field name="total_expenses" sum="Total Dépenses"/>
                                    <field name="balance" sum="Solde Total"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Opérations" name="operations">
                            <field name="operation_ids" nolabel="1">
                                <tree string="Opérations">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="type" widget="badge" decoration-success="type == 'receipt'" decoration-danger="type == 'expense'"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="payment_method"/>
                                    <field name="invoice_number"/>
                                    <field name="quote_number"/>
                                    <field name="user_id"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Recherche des Caisses -->
    <record id="view_cash_register_search" model="ir.ui.view">
        <field name="name">cash.register.search</field>
        <field name="model">cash.register</field>
        <field name="arch" type="xml">
            <search string="Recherche de Caisse">
                <field name="name"/>
                <field name="code"/>
                <field name="user_id"/>
                <filter string="Ouvertes" name="opened" domain="[('state', '=', 'opened')]"/>
                <filter string="Fermées" name="closed" domain="[('state', '=', 'closed')]"/>
                <filter string="Caisses Principales" name="main" domain="[('is_main', '=', True)]"/>
                <filter string="Sous-Caisses" name="sub" domain="[('is_main', '=', False)]"/>
                <separator/>
                <filter string="Mes Caisses" name="my_cashes" domain="[('user_id', '=', uid)]"/>
                <filter string="Caisse Principale" name="main_cash_filter" 
                        domain="[('main_cash_id', '=', active_id)]" 
                        context="{'search_default_main_cash_filter': active_id}"/>
                <group expand="0" string="Grouper par">
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Utilisateur" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Caisse Principale" name="group_main" context="{'group_by': 'is_main'}"/>
                    <filter string="Caisse Principale Parente" name="group_main_cash" context="{'group_by': 'main_cash_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Mise à jour de l'action pour ajouter la vue de recherche -->
    <record id="action_cash_register" model="ir.actions.act_window">
        <field name="search_view_id" ref="view_cash_register_search"/>
    </record>

    <!-- Vue Liste des Opérations -->
    <record id="view_cash_register_operation_tree" model="ir.ui.view">
        <field name="name">cash.register.operation.tree</field>
        <field name="model">cash.register.operation</field>
        <field name="arch" type="xml">
            <tree string="Opérations" decoration-success="type == 'receipt' and state == 'confirmed'" decoration-danger="type == 'expense' and state == 'confirmed'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="cash_register_id"/>
                <field name="reservation_id" optional="show"/>
                <field name="type" widget="badge" decoration-success="type == 'receipt'" decoration-danger="type == 'expense'"/>
                <field name="amount" sum="Total" widget="monetary"/>
                <field name="payment_method"/>
                <field name="invoice_id" optional="show"/>
                <field name="sale_order_id" optional="show"/>
                <field name="user_id"/>
                <field name="state" widget="badge" decoration-success="state == 'confirmed'" decoration-muted="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire des Opérations -->
    <record id="view_cash_register_operation_form" model="ir.ui.view">
        <field name="name">cash.register.operation.form</field>
        <field name="model">cash.register.operation</field>
        <field name="arch" type="xml">
            <form string="Opération de Caisse">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_print_receipt" string="Imprimer Reçu" type="object" 
                            class="oe_highlight" icon="fa-print"
                            attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('type', '!=', 'receipt')]}"/>
                    <button name="action_cancel" string="Annuler" type="object" 
                            attrs="{'invisible': [('state', '=', 'cancelled')]}"/>
                    <button name="action_draft" string="Remettre en Brouillon" type="object" 
                            attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" attrs="{'invisible': [('reservation_id', '=', False)]}">
                        <button class="oe_stat_button" type="action" name="%(travel_pro_version1.action_reservation)d" 
                                icon="fa-plane" attrs="{'invisible': [('reservation_id', '=', False)]}"
                                context="{'default_reservation_id': reservation_id, 'search_default_reservation_id': reservation_id}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Réservation</span>
                                <span class="o_stat_value" attrs="{'invisible': [('reservation_id', '=', False)]}">
                                    <field name="reservation_id" readonly="1" widget="statinfo"/>
                                </span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="cash_register_id" options="{'no_create': True}"/>
                            <field name="date"/>
                            <field name="type" widget="radio" options="{'horizontal': true}"/>
                            <field name="amount" widget="monetary" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payment_method"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="reservation_id" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   options="{'no_create': True}"
                                   context="{'default_type': type}"/>
                            <field name="sale_order_id" 
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   options="{'no_create': True}"/>
                            <field name="invoice_id" 
                                   domain="[('move_type', 'in', ['out_invoice', 'out_refund'])]"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"
                                   options="{'no_create': True}"/>
                            <field name="invoice_number" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="quote_number" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" placeholder="Références de cet argent..." 
                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Recherche des Opérations -->
    <record id="view_cash_register_operation_search" model="ir.ui.view">
        <field name="name">cash.register.operation.search</field>
        <field name="model">cash.register.operation</field>
        <field name="arch" type="xml">
            <search string="Recherche d'Opération">
                <field name="name"/>
                <field name="cash_register_id"/>
                <field name="invoice_number"/>
                <field name="quote_number"/>
                <filter string="Recettes" name="receipts" domain="[('type', '=', 'receipt')]"/>
                <filter string="Dépenses" name="expenses" domain="[('type', '=', 'expense')]"/>
                <filter string="Confirmées" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Brouillons" name="draft" domain="[('state', '=', 'draft')]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Type" name="group_type" context="{'group_by': 'type'}"/>
                    <filter string="Caisse" name="group_cash" context="{'group_by': 'cash_register_id'}"/>
                    <filter string="Mode de Paiement" name="group_payment" context="{'group_by': 'payment_method'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Mise à jour des actions avec les vues de recherche -->
    <record id="action_cash_register_operation" model="ir.actions.act_window">
        <field name="search_view_id" ref="view_cash_register_operation_search"/>
    </record>
</odoo>
