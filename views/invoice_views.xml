<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_travel" model="ir.ui.view">
        <field name="name">account.move.form.inherit.travel</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="reservation_id" domain="[('member_id.partner_id', '=', partner_id)]" options="{'no_create': True}"/>
                <field name="reservation_name" readonly="1" attrs="{'invisible': [('reservation_id', '=', False)]}"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_cash_operations" 
                        icon="fa-money" attrs="{'invisible': [('cash_operation_count', '=', 0), ('reservation_id', '=', False)]}">
                    <field name="cash_operation_count" widget="statinfo" string="Opérations Caisse"/>
                </button>
                <button class="oe_stat_button" type="action" name="%(travel_pro_version1.action_reservation)d" 
                        icon="fa-plane" attrs="{'invisible': [('reservation_id', '=', False)]}"
                        context="{'default_reservation_id': reservation_id, 'search_default_reservation_id': reservation_id}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Réservation</span>
                        <span class="o_stat_value" attrs="{'invisible': [('reservation_id', '=', False)]}">
                            <field name="reservation_name" readonly="1"/>
                        </span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="inside">
                <group string="TravelPro" attrs="{'invisible': ['|', ('move_type', '!=', 'out_invoice'), ('move_type', '!=', 'out_refund')]}">
                    <field name="member_id" readonly="1"/>
                    <field name="reservation_id" readonly="1" options="{'no_create': True, 'no_edit': True}"/>
                </group>
            </xpath>
        </field>
    </record>
    
    <record id="view_invoice_tree_inherit_travel" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.travel</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="reservation_name" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>