<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_cash_receipt_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <style>
                        @media print {
                            .page { page-break-inside: avoid; }
                            .row { page-break-inside: avoid; }
                        }
                    </style>
                    <div class="page" style="padding: 15px 20px; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">
                        
                        <!-- Logo -->
                        <div class="row mb-4">
                            <div class="col-12 text-center">
                                <img src="/travel_pro_version1/static/src/img/logo_we_can_travel.png" alt="Logo Agence" style="max-width: 300px; max-height: 120px;"/>
                            </div>
                        </div>

                        <!-- Titre -->
                        <div class="text-center" style="border-bottom: 2px solid #000; padding-bottom: 10px; margin-bottom: 20px;">
                            <h2 style="margin: 0; font-weight: bold;">REÇU DE CAISSE</h2>
                            <p style="font-size: 1.2em; margin: 5px 0;"><span t-field="o.name"/></p>
                        </div>

                        <!-- Info Agence -->
                        <div class="row mb-4 text-center">
                            <div class="col-12" style="font-size: 12px; color: #555;">
                                <strong>Agence WE CAN TRAVEL</strong><br/>
                                rue bachir aljaziri manzel gabes - Gabes<br/>
                                Tél: +216 25 100 035 | Email: sales@we-cantravel.com
                            </div>
                        </div>

                        <!-- Info Opération -->
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Date:</strong> <span t-field="o.date"/><br/>
                                <strong>Caisse:</strong> <span t-field="o.cash_register_id.name"/><br/>
                                <strong>Caissier:</strong> <span t-field="o.user_id.name"/>
                            </div>
                            <div class="col-6 text-right" style="text-align: right;">
                                <strong>Type:</strong> 
                                <span t-field="o.type" style="text-transform: uppercase;"/><br/>
                                <strong>Mode de Paiement:</strong> <span t-field="o.payment_method"/>
                            </div>
                        </div>

                        <!-- Montant -->
                        <div class="row mt32" style="background-color: #f8f9fa; padding: 20px; border-radius: 5px; border: 1px solid #dee2e6;">
                            <div class="col-12 text-center">
                                <h3 style="margin: 0; color: #212529;">Montant: <span t-field="o.amount" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></h3>
                            </div>
                        </div>

                        <!-- Détails Réservation -->
                        <div class="row mt32" t-if="o.reservation_id">
                            <div class="col-12">
                                <div class="card" style="border: 1px solid #ddd;">
                                    <div class="card-header bg-light" style="padding: 10px; background-color: #f8f9fa; border-bottom: 1px solid #ddd;">
                                        <strong>Détails de la Réservation</strong>
                                    </div>
                                    <div class="card-body" style="padding: 15px;">
                                        <p class="card-text">
                                            <strong>Client:</strong> <span t-field="o.reservation_id.member_id.name"/><br/>
                                            <strong>Destination:</strong> <span t-field="o.reservation_id.destination_id.name"/><br/>
                                            <strong>Référence Réservation:</strong> <span t-field="o.reservation_id.name"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Note -->
                        <div class="row mt32" t-if="o.note">
                            <div class="col-12">
                                <strong>Note:</strong><br/>
                                <span t-field="o.note"/>
                            </div>
                        </div>

                        <!-- Signatures -->
                        <div class="row mt64" style="margin-top: 60px;">
                            <div class="col-6 text-center">
                                <strong>Signature Client</strong>
                                <br/><br/><br/><br/>
                                ____________________
                            </div>
                            <div class="col-6 text-center">
                                <strong>Signature Caissier</strong>
                                <br/><br/><br/><br/>
                                ____________________
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="text-center mt64" style="font-size: 0.8em; color: #6c757d; margin-top: 50px;">
                            <p>Merci de votre confiance.</p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="report_cash_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="travel_pro_version1.report_cash_receipt_document" t-lang="o.user_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_cash_receipt" model="ir.actions.report">
        <field name="name">Reçu de Caisse</field>
        <field name="model">cash.register.operation</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">travel_pro_version1.report_cash_receipt</field>
        <field name="report_file">travel_pro_version1.report_cash_receipt</field>
        <field name="print_report_name">'Recu_Caisse_%s' % (object.name)</field>
        <field name="binding_model_id" ref="model_cash_register_operation"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
