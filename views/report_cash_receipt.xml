<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_cash_receipt_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article">
                    <style>
                        @media print {
                            .page { page-break-inside: avoid; }
                            .row { page-break-inside: avoid; }
                        }
                    </style>
                    <div class="page" style="padding: 10px 15px; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-size: 16px;">
                        
                        <!-- Logo -->
                        <div class="row mb-2">
                            <div class="col-12 text-center">
                                <img src="/travel_pro_version1/static/src/img/logo_we_can_travel.png" alt="Logo Agence" style="max-width: 250px; max-height: 100px;"/>
                            </div>
                        </div>

                        <!-- Titre -->
                        <div class="text-center" style="border-bottom: 2px solid #000; padding-bottom: 5px; margin-bottom: 15px;">
                            <h3 style="margin: 0; font-weight: bold; font-size: 28px;">RE√áU DE CAISSE</h3>
                            <p style="font-size: 18px; margin: 3px 0;"><span t-field="o.name"/></p>
                        </div>

                        <!-- Info Agence (Gauche) -->
                        <div class="row mb-3">
                            <div class="col-12 text-left" style="font-size: 14px; color: #555; text-align: left;">
                                <strong style="font-size: 18px; color: #333;">Agence WE CAN TRAVEL</strong><br/>
                                rue bachir aljaziri manzel gabes - Gabes<br/>
                                T√©l: +216 25 100 035 | Email: sales@we-cantravel.com
                            </div>
                        </div>

                        <!-- Info Op√©ration -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Date:</strong> <span t-field="o.date"/><br/>
                                <strong>Caisse:</strong> <span t-field="o.cash_register_id.name"/><br/>
                                <strong>Caissier:</strong> <span t-field="o.user_id.name"/>
                            </div>
                            <div class="col-6 text-right" style="text-align: right;">
                                <strong>Type:</strong> 
                                <span t-field="o.type" style="text-transform: uppercase;"/><br/>
                                <strong>Mode de Paiement:</strong> <span t-field="o.payment_method"/>
                            </div>
                        </div>

                        <!-- R√©f√©rences Li√©es -->
                        <div class="row mb-3" t-if="o.reservation_id or o.invoice_number or o.sale_order_id or o.invoice_id or o.quote_number or o.note">
                            <div class="col-12">
                                <div class="card" style="border: 1px solid #17a2b8;">
                                    <div class="card-header" style="padding: 5px 10px; background-color: #d1ecf1; border-bottom: 1px solid #17a2b8; font-size: 18px;">
                                        <strong style="color: #0c5460;">üìã R√©f√©rences Li√©es</strong>
                                    </div>
                                    <div class="card-body" style="padding: 10px;">
                                        <table style="width: 100%; font-size: 14px;">
                                            <t t-if="o.reservation_id">
                                                <tr>
                                                    <td style="padding: 4px 8px; width: 40%;"><strong>üìå R√©servation:</strong></td>
                                                    <td style="padding: 4px 8px;"><span t-field="o.reservation_id.name"/></td>
                                                </tr>
                                            </t>
                                            <t t-if="o.invoice_number">
                                                <tr>
                                                    <td style="padding: 4px 8px;"><strong>üßæ Num√©ro Facture:</strong></td>
                                                    <td style="padding: 4px 8px;"><span t-field="o.invoice_number"/></td>
                                                </tr>
                                            </t>
                                            <t t-if="o.sale_order_id">
                                                <tr>
                                                    <td style="padding: 4px 8px;"><strong>üìù Devis:</strong></td>
                                                    <td style="padding: 4px 8px;"><span t-field="o.sale_order_id.name"/></td>
                                                </tr>
                                            </t>
                                            <t t-if="o.invoice_id">
                                                <tr>
                                                    <td style="padding: 4px 8px;"><strong>üìÑ Facture:</strong></td>
                                                    <td style="padding: 4px 8px;"><span t-field="o.invoice_id.name"/></td>
                                                </tr>
                                            </t>
                                            <t t-if="o.quote_number">
                                                <tr>
                                                    <td style="padding: 4px 8px;"><strong>üìã Num√©ro Devis:</strong></td>
                                                    <td style="padding: 4px 8px;"><span t-field="o.quote_number"/></td>
                                                </tr>
                                            </t>
                                            <t t-if="o.note">
                                                <tr>
                                                    <td style="padding: 4px 8px;"><strong>üìù Note/R√©f√©rence:</strong></td>
                                                    <td style="padding: 4px 8px;"><span t-field="o.note"/></td>
                                                </tr>
                                            </t>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- D√©tails R√©servation -->
                        <div class="row mb-3" t-if="o.reservation_id">
                            <div class="col-12">
                                <div class="card" style="border: 1px solid #ddd;">
                                    <div class="card-header bg-light" style="padding: 5px 10px; background-color: #f8f9fa; border-bottom: 1px solid #ddd; font-size: 18px;">
                                        <strong>D√©tails de la R√©servation</strong>
                                    </div>
                                    <div class="card-body" style="padding: 10px;">
                                        <p class="card-text" style="margin: 0;">
                                            <strong>Client:</strong> <span t-field="o.reservation_id.member_id.name"/><br/>
                                            <strong>Destination:</strong> <span t-field="o.reservation_id.destination_id.name"/><br/>
                                            <strong>Ref:</strong> <span t-field="o.reservation_id.name"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Info Paiement Cr√©dit -->
                        <div class="row mb-3" t-if="o.reservation_id and o.reservation_id.use_credit and o.reservation_id.credit_used > 0">
                            <div class="col-12">
                                <div class="card" style="border: 1px solid #28a745;">
                                    <div class="card-header" style="padding: 5px 10px; background-color: #d4edda; border-bottom: 1px solid #28a745; font-size: 18px;">
                                        <strong style="color: #155724;">üí≥ Info Paiement Cr√©dit</strong>
                                    </div>
                                    <div class="card-body" style="padding: 10px; background-color: #f1f8f4;">
                                        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                                            <span style="font-size: 16px;"><strong>Cr√©dit Utilis√©:</strong></span>
                                            <span style="color: #28a745; font-weight: 600; font-size: 16px;">
                                                <span t-esc="'{:,.3f}'.format(o.reservation_id.credit_used)"/> DT
                                            </span>
                                        </div>
                                        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                                            <span style="font-size: 16px;"><strong>‚úÖ Montant Pay√©:</strong></span>
                                            <span style="color: #28a745; font-weight: 600; font-size: 16px;">
                                                <span t-esc="'{:,.3f}'.format(o.reservation_id.credit_used)"/> DT
                                            </span>
                                        </div>
                                        <div style="display: flex; justify-content: space-between;">
                                            <span style="font-size: 16px;"><strong>üî¥ Reste √† Payer:</strong></span>
                                            <span style="color: #dc3545; font-weight: 600; font-size: 16px;">
                                                <span t-esc="'{:,.3f}'.format(o.reservation_id.remaining_to_pay)"/> DT
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Montant ( Compact ) -->
                        <div class="row mb-3" style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; border: 1px solid #dee2e6;">
                            <div class="col-12 text-center">
                                <h3 style="margin: 0; color: #212529; font-size: 32px;">Montant: <span t-esc="'{:,.3f}'.format(o.amount)"/> DT</h3>
                            </div>
                        </div>

                        <!-- Signature Caissier -->
                        <div class="row mt-4" style="margin-top: 30px;">
                            <div class="col-12 text-center">
                                <strong>Signature Caissier</strong>
                                <br/><br/><br/>
                                ____________________
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="text-center mt-4" style="font-size: 12px; color: #6c757d; margin-top: 20px;">
                            <p>Merci de votre confiance.</p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="report_cash_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="travel_pro_version1.report_cash_receipt_document" t-lang="o.user_id.lang"/>
            </t>
        </t>
    </template>

    <record id="action_report_cash_receipt" model="ir.actions.report">
        <field name="name">Re√ßu de Caisse</field>
        <field name="model">cash.register.operation</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">travel_pro_version1.report_cash_receipt</field>
        <field name="report_file">travel_pro_version1.report_cash_receipt</field>
        <field name="print_report_name">'Recu_Caisse_%s' % (object.name)</field>
        <field name="binding_model_id" ref="model_cash_register_operation"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
