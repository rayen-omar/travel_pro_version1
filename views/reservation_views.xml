<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action pour ouvrir les r√©servations -->
    <record id="action_reservation" model="ir.actions.act_window">
        <field name="name">R√©servations</field>
        <field name="res_model">travel.reservation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er une nouvelle r√©servation
            </p>
            <p>
                G√©rez les r√©servations de vos clients pour les voyages avec suivi des paiements.
            </p>
        </field>
    </record>
    
    <!-- Vue Liste R√©servations -->
    <record id="view_reservation_tree" model="ir.ui.view">
        <field name="name">reservation.tree</field>
        <field name="model">travel.reservation</field>
        <field name="arch" type="xml">
            <tree string="R√©servations" 
                  decoration-success="status == 'confirmed'" 
                  decoration-info="status == 'done'" 
                  decoration-muted="status == 'cancel'"
                  decoration-warning="remaining_to_pay > 0 and status == 'confirmed'">
                <field name="name" string="üìã R√©f"/>
                <field name="member_id" string="üë§ Client"/>
                <field name="destination_id" string="‚úàÔ∏è Voyage"/>
                <field name="trip_type" string="Type" widget="badge" optional="hide"/>
                <field name="check_in" string="üõ¨ Arriv√©e"/>
                <field name="check_out" string="üõ´ D√©part"/>
                <field name="nights" string="üåô Nuits"/>
                <field name="participants" string="üë• Pax" optional="show"/>
                <field name="total_price" string="üíµ Total" widget="monetary" sum="Total" decoration-bf="True"/>
                <field name="credit_used" string="üí≥ Cr√©dit" widget="monetary" optional="show"/>
                <field name="remaining_to_pay" string="üî¥ Reste" widget="monetary" 
                       decoration-danger="remaining_to_pay > 0"/>
                <field name="status" string="√âtat" widget="badge"/>
            </tree>
        </field>
    </record>
    
    <!-- Vue Kanban R√©servations -->
    <record id="view_reservation_kanban" model="ir.ui.view">
        <field name="name">reservation.kanban</field>
        <field name="model">travel.reservation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="member_id"/>
                <field name="destination_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="total_price"/>
                <field name="remaining_to_pay"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details p-3">
                                <strong class="o_kanban_record_title text-primary">
                                    üìã <field name="name"/>
                                </strong>
                                <div class="mt-2">
                                    üë§ <field name="member_id"/>
                                </div>
                                <div class="text-muted">
                                    ‚úàÔ∏è <field name="destination_id"/>
                                </div>
                                <div class="text-muted mt-1">
                                    üìÖ <field name="check_in"/> ‚Üí <field name="check_out"/>
                                </div>
                                <div class="mt-3">
                                    <span class="badge bg-primary fs-6">
                                        üí∞ <field name="total_price" widget="monetary"/>
                                    </span>
                                    <span class="badge bg-danger" t-if="record.remaining_to_pay.raw_value > 0">
                                        üî¥ <field name="remaining_to_pay" widget="monetary"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vue Formulaire R√©servations - Style Am√©lior√© -->
    <record id="view_reservation_form" model="ir.ui.view">
        <field name="name">reservation.form</field>
        <field name="model">travel.reservation</field>
        <field name="arch" type="xml">
            <form string="R√©servation">
                <header>
                    <button name="action_confirm" string="‚úÖ Confirmer" type="object" 
                            class="btn-success" attrs="{'invisible': [('status', '!=', 'draft')]}"/>
                    <button name="action_print_quote" string="üñ®Ô∏è Imprimer Devis" type="object" 
                            attrs="{'invisible': [('status', '!=', 'draft')]}"/>
                    <button name="action_done" string="‚úîÔ∏è Termin√©" type="object" 
                            class="btn-info" attrs="{'invisible': [('status', '!=', 'confirmed')]}"/>
                    <button name="action_cancel" string="‚ùå Annuler" type="object" 
                            attrs="{'invisible': [('status', '!=', 'draft')]}"/>
                    <button name="action_create_invoice" type="object" string="üìÑ Facturer" 
                            class="btn-primary" attrs="{'invisible': [('status', '=', 'draft')]}"/>
                    <button name="action_open_pos" type="object" string="üíµ Payer Caisse" 
                            class="btn-warning" attrs="{'invisible': [('remaining_to_pay', '&lt;=', 0)]}"/>
                    <button name="action_cancel_and_credit" type="object" string="üîÑ Annuler &amp; Cr√©diter" 
                            class="btn-danger" attrs="{'invisible': [('status', '!=', 'confirmed')]}" 
                            confirm="√ätes-vous s√ªr de vouloir annuler cette r√©servation et cr√©diter le client ?"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <field name="currency_id" invisible="1"/>
                    
                    <!-- Boutons statistiques -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_invoices" 
                                icon="fa-file-pdf-o" attrs="{'invisible': [('invoice_count', '=', 0)]}">
                            <field name="invoice_count" widget="statinfo" string="Factures"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_cash_operations" 
                                icon="fa-money" attrs="{'invisible': [('cash_operation_count', '=', 0)]}">
                            <field name="cash_operation_count" widget="statinfo" string="Paiements"/>
                        </button>
                    </div>
                    
                    <!-- En-t√™te avec r√©f√©rence -->
                    <div class="oe_title mb-3">
                        <h1>
                            <field name="name" readonly="1" class="text-primary"/>
                        </h1>
                    </div>
                    
                    <!-- Barre de progression -->
                    <div class="alert alert-info py-2 mb-3" role="alert" attrs="{'invisible': [('workflow_progress_percent', '=', 100)]}">
                        <div class="d-flex align-items-center">
                            <strong class="me-3">üìä Progression:</strong>
                            <field name="workflow_progress_percent" widget="progressbar" class="flex-grow-1"/>
                        </div>
                    </div>
                    
                    <!-- Section 1: Client & Voyage -->
                    <div class="row">
                        <div class="col-lg-6">
                            <group string="üë§ CLIENT">
                                <field name="member_id" string="Client" options="{'no_create': True}" required="1"/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group string="‚úàÔ∏è VOYAGE">
                                <field name="destination_id" string="Destination" options="{'no_create': True}" required="1"/>
                                <field name="trip_type" string="Type"/>
                            </group>
                        </div>
                    </div>
                    
                    <separator string="üìÖ P√âRIODE &amp; PARTICIPANTS" class="mt-4"/>
                    
                    <!-- Section 2: P√©riode & Participants -->
                    <div class="row">
                        <div class="col-lg-6">
                            <group>
                                <field name="check_in" string="üõ¨ Date Arriv√©e"/>
                                <field name="check_out" string="üõ´ Date D√©part"/>
                                <field name="nights" string="üåô Nuit√©es" readonly="1"/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group>
                                <field name="adults" string="üë® Adultes"/>
                                <field name="children" string="üë¶ Enfants"/>
                                <field name="infants" string="üë∂ B√©b√©s"/>
                                <field name="participants" string="üë• Total Pax" readonly="1"/>
                            </group>
                        </div>
                    </div>
                    
                    <separator string="üè® H√âBERGEMENT &amp; FOURNISSEUR" class="mt-4"/>
                    
                    <!-- Section 3: H√©bergement -->
                    <div class="row">
                        <div class="col-lg-6">
                            <group>
                                <field name="hotel_service_id" string="üè® Service H√¥tel" 
                                       options="{'no_create': True}"
                                       domain="[('type', '=', 'hebergement')]"/>
                                <field name="supplier_id" string="üè¢ Fournisseur" options="{'no_create': True}"/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group>
                                <field name="local_or_foreign" string="üåç Local/√âtranger"/>
                                <field name="room_category" string="üè∑Ô∏è Cat√©gorie"/>
                                <field name="room_type" string="üõèÔ∏è Type Chambre"/>
                            </group>
                        </div>
                    </div>
                    
                    <separator string="üí∞ TARIFICATION" class="mt-4"/>
                    
                    <!-- Section 4: Tarification -->
                    <div class="row">
                        <div class="col-lg-6">
                            <group string="üìä Prix">
                                <field name="price" string="Prix Voyage (TTC)" widget="monetary"/>
                                <div class="d-flex align-items-center">
                                    <field name="purchase_amount" string="Prix Achat" widget="monetary" class="flex-grow-1"/>
                                    <button name="action_compute_purchase_amount" string="üìä" type="object" 
                                            class="btn btn-sm btn-secondary ms-2"
                                            attrs="{'invisible': [('supplier_id', '=', False)]}"
                                            title="Calculer depuis Fournisseur"/>
                                </div>
                            </group>
                            <group string="üõéÔ∏è Services Additionnels">
                                <field name="service_ids" widget="many2many_tags" nolabel="1"
                                       options="{'no_create': True}"/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group string="üíµ MONTANTS">
                                <div class="alert alert-primary text-center py-3 mb-2">
                                    <span class="text-muted">Total TTC</span>
                                    <h2 class="mb-0 text-primary fw-bold">
                                        <field name="total_price" widget="monetary" nolabel="1"/>
                                    </h2>
                                </div>
                                <field name="use_credit" string="üí≥ Utiliser Cr√©dit"/>
                                <field name="credit_used" string="Cr√©dit Utilis√©" widget="monetary" readonly="1"
                                       attrs="{'invisible': [('use_credit', '=', False)]}"
                                       class="text-success fw-bold"/>
                            </group>
                            <div class="alert alert-danger text-center py-3" 
                                 attrs="{'invisible': [('remaining_to_pay', '&lt;=', 0)]}">
                                <span class="text-muted">Reste √† Payer</span>
                                <h2 class="mb-0 text-danger fw-bold">
                                    <field name="remaining_to_pay" widget="monetary" nolabel="1"/>
                                </h2>
                            </div>
                            <div class="alert alert-success text-center py-2" 
                                 attrs="{'invisible': [('remaining_to_pay', '>', 0)]}">
                                <h4 class="mb-0 text-success">‚úÖ Enti√®rement Pay√©</h4>
                            </div>
                        </div>
                    </div>
                    
                    <separator string="üìã WORKFLOW" class="mt-4"/>
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <group>
                                <field name="has_invoice" widget="boolean_toggle" readonly="1" string="üìÑ Factur√©"/>
                                <field name="has_payment" widget="boolean_toggle" readonly="1" string="üíµ Paiement Re√ßu"/>
                            </group>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Vue Recherche -->
    <record id="view_reservation_search" model="ir.ui.view">
        <field name="name">reservation.search</field>
        <field name="model">travel.reservation</field>
        <field name="arch" type="xml">
            <search string="Rechercher R√©servations">
                <field name="name" string="R√©f√©rence"/>
                <field name="member_id" string="Client"/>
                <field name="destination_id" string="Voyage"/>
                <field name="supplier_id" string="Fournisseur"/>
                <separator/>
                <filter string="üìù Brouillon" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="‚úÖ Confirm√©es" name="confirmed" domain="[('status', '=', 'confirmed')]"/>
                <filter string="‚úîÔ∏è Termin√©es" name="done" domain="[('status', '=', 'done')]"/>
                <filter string="‚ùå Annul√©es" name="cancel" domain="[('status', '=', 'cancel')]"/>
                <separator/>
                <filter string="üî¥ √Ä payer" name="to_pay" domain="[('remaining_to_pay', '>', 0)]"/>
                <filter string="‚úÖ Pay√©es" name="paid" domain="[('remaining_to_pay', '&lt;=', 0)]"/>
                <separator/>
                <group expand="0" string="Grouper Par">
                    <filter string="√âtat" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Client" name="group_member" context="{'group_by': 'member_id'}"/>
                    <filter string="Voyage" name="group_dest" context="{'group_by': 'destination_id'}"/>
                    <filter string="Fournisseur" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                    <filter string="Mois Arriv√©e" name="group_checkin" context="{'group_by': 'check_in:month'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
