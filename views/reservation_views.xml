<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_reservation_tree" model="ir.ui.view">
        <field name="name">reservation.tree</field>
        <field name="model">travel.reservation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="member_id"/>
                <field name="destination_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="nights"/>
                <field name="participants"/>
                <field name="total_price"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    
    <record id="view_reservation_form" model="ir.ui.view">
        <field name="name">reservation.form</field>
        <field name="model">travel.reservation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"/>
                    <button name="action_create_sale_order" type="object"
                            string="Créer Devis" class="btn-primary"
                            attrs="{'invisible': [('sale_order_id', '!=', False)]}"/>
                    <button name="action_view_sale_order" type="object"
                            string="Voir Devis" class="btn-primary"
                            attrs="{'invisible': [('sale_order_id', '=', False)]}"/>
                    <button name="action_save_reservation" type="object"
                            string="Enregistrer la réservation" class="btn-success"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1" placeholder="Référence auto..."/></h1>
                    </div>
                    
                    <group>
                        <group string="Informations générales">
                            <field name="member_id"/>
                            <field name="destination_id"/>
                        </group>
                        <group string="Période">
                            <field name="check_in"/>
                            <field name="nights" readonly="1"/>
                            <field name="check_out"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Hébergement">
                            <field name="hotel_service_id"/>
                            <field name="supplier_id"/>
                            <field name="local_or_foreign"/>
                        </group>
                        <group string="Chambre">
                            <field name="room_category"/>
                            <field name="room_type"/>
                        </group>
                    </group>
                    
                    <group string="Participants">
                        <field name="adults"/>
                        <field name="children"/>
                        <field name="infants"/>
                        <field name="participants" readonly="1"/>
                    </group>
                    
                    <group string="Tarifs">
                        <field name="purchase_amount"/>
                        <field name="sale_amount"/>
                        <field name="total_price" readonly="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Services additionnels">
                            <field name="service_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Devis">
                            <field name="sale_order_id" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>