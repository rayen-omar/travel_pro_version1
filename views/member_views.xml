<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste Membres -->
    <record id="view_member_tree" model="ir.ui.view">
        <field name="name">member.tree</field>
        <field name="model">travel.member</field>
        <field name="arch" type="xml">
            <tree string="Membres" decoration-success="credit_balance > 0">
                <field name="name" string="Nom"/>
                <field name="company_id" string="Société"/>
                <field name="matricule" string="Matricule"/>
                <field name="email" string="Email"/>
                <field name="phone" string="Téléphone"/>
                <field name="credit_balance" string="Crédit" widget="monetary" 
                       decoration-success="credit_balance > 0" decoration-bf="credit_balance > 0"/>
                <field name="reservation_count" string="Réservations" optional="show"/>
            </tree>
        </field>
    </record>
    
    <!-- Vue Formulaire Membres -->
    <record id="view_member_form" model="ir.ui.view">
        <field name="name">member.form</field>
        <field name="model">travel.member</field>
        <field name="arch" type="xml">
            <form string="Membre">
                <sheet>
                    <field name="partner_id" invisible="1"/>
                    
                    <!-- En-tête -->
                    <div class="oe_title mb-3">
                        <h1>
                            <field name="name" placeholder="Nom du membre" required="1" class="text-primary"/>
                        </h1>
                        <div class="mt-2">
                            <field name="company_id" options="{'no_create': True}" placeholder="Sélectionner une société..."/>
                        </div>
                    </div>
                    
                    <!-- Section Contact & Crédit -->
                    <div class="row">
                        <div class="col-lg-6">
                            <group string="Informations">
                                <field name="matricule" string="Matricule"/>
                                <field name="email" string="Email" widget="email" placeholder="email@exemple.com"/>
                                <field name="phone" string="Téléphone" widget="phone" placeholder="+216 XX XXX XXX"/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group string="Crédit">
                                <div class="alert alert-success text-center py-3" role="alert">
                                    <h4 class="mb-0">Solde Crédit</h4>
                                    <h2 class="mb-0 text-success fw-bold">
                                        <field name="credit_balance" widget="monetary" nolabel="1"/>
                                    </h2>
                                </div>
                            </group>
                        </div>
                    </div>
                    
                    <separator string="Réservations" class="mt-4"/>
                    
                    <!-- Section Réservations -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <field name="reservation_ids" nolabel="1">
                                <tree decoration-success="status == 'confirmed'" 
                                      decoration-info="status == 'done'" 
                                      decoration-muted="status == 'cancel'">
                                    <field name="name" string="Référence"/>
                                    <field name="destination_id" string="Voyage"/>
                                    <field name="check_in" string="Arrivée"/>
                                    <field name="check_out" string="Départ"/>
                                    <field name="total_price" string="Total" widget="monetary"/>
                                    <field name="remaining_to_pay" string="Reste" widget="monetary" 
                                           decoration-danger="remaining_to_pay > 0"/>
                                    <field name="status" string="État" widget="badge"/>
                                </tree>
                            </field>
                        </div>
                    </div>
                    
                    <separator string="Historique Crédit" class="mt-4"/>
                    
                    <!-- Section Historique Crédit -->
                    <field name="credit_history_ids" nolabel="1">
                        <tree decoration-success="type == 'recharge'" 
                              decoration-danger="type == 'usage'"
                              decoration-warning="type == 'refund'">
                            <field name="date" string="Date"/>
                            <field name="type" string="Type" widget="badge"/>
                            <field name="amount" string="Montant" sum="Total" widget="monetary"/>
                            <field name="reservation_id" string="Réservation" optional="show"/>
                            <field name="note" string="Note"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vue Kanban Membres -->
    <record id="view_member_kanban" model="ir.ui.view">
        <field name="name">member.kanban</field>
        <field name="model">travel.member</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="company_id"/>
                <field name="matricule"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="credit_balance"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details p-3">
                                <strong class="o_kanban_record_title fs-5 text-primary">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted mt-1" t-if="record.company_id.value">
                                    <field name="company_id"/>
                                </div>
                                <div class="mt-1" t-if="record.matricule.value">
                                    <field name="matricule"/>
                                </div>
                                <div t-if="record.phone.value">
                                    <field name="phone"/>
                                </div>
                                <div class="mt-3">
                                    <span class="badge bg-success fs-6">
                                        <field name="credit_balance" widget="monetary"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vue recherche -->
    <record id="view_member_search" model="ir.ui.view">
        <field name="name">member.search</field>
        <field name="model">travel.member</field>
        <field name="arch" type="xml">
            <search string="Rechercher Membres">
                <field name="name" string="Nom"/>
                <field name="matricule" string="Matricule"/>
                <field name="email" string="Email"/>
                <field name="phone" string="Téléphone"/>
                <field name="company_id" string="Société"/>
                <separator/>
                <filter string="Avec Crédit" name="with_credit" domain="[('credit_history_ids', '!=', False)]"/>
                <filter string="Sans Crédit" name="without_credit" domain="[('credit_history_ids', '=', False)]"/>
                <separator/>
                <group expand="0" string="Grouper Par">
                    <filter string="Société" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_member" model="ir.actions.act_window">
        <field name="name">Membres</field>
        <field name="res_model">travel.member</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau membre
            </p>
            <p>
                Gérez les membres de vos sociétés clientes, leur crédit et leurs réservations de voyages.
            </p>
        </field>
    </record>
</odoo>
