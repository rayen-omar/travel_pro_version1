                <filter string="Sans Cr√©dit" name="without_credit" domain="[('credit_history_ids', '=', False)]"/>
                <separator/>
                <group expand="0" string="Grouper Par">
                    <filter string="Soci√©t√©" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
