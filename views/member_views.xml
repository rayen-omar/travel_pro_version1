                                    üîñ <field name="matricule"/>
                                </div>
                                <div t-if="record.phone.value">
                                    üìû <field name="phone"/>
                                </div>
                                <div class="mt-3">
                                    <span class="badge bg-success fs-6">
                                        üí∞ <field name="credit_balance" widget="monetary"/>
                                    </span>
                                </div>
                            </div>
