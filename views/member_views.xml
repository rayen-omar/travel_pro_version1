<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste (Tree) -->
    <record id="view_member_tree" model="ir.ui.view">
        <field name="name">member.tree</field>
        <field name="model">travel.member</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>
    
    <!-- Vue Formulaire (Form) -->
    <record id="view_member_form" model="ir.ui.view">
        <field name="name">member.form</field>
        <field name="model">travel.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- BOUTON CRÉER RÉSERVATION -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_reservation"
                                type="object"
                                string="Créer Réservation"
                                class="oe_highlight btn-primary"/>
                    </div>
                    
                    <!-- FORMULAIRE -->
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <!-- CHAMP CACHÉ MAIS OBLIGATOIRE -->
                        <field name="partner_id" invisible="1"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="reservation_ids">
                            <tree>
                                <field name="name"/>
                                <field name="destination_id"/>
                                <field name="status"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>