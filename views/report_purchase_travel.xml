<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template QWeb pour le rapport d'achat travel -->
    <template id="report_travel_purchase">
        <t t-set="company" t-value="res_company"/>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page" style="padding: 30px; font-family: Arial, sans-serif;">
                <!-- En-tête principal -->
                <div class="row mb-4" style="border-bottom: 1px solid #e0e0e0; padding-bottom: 20px; margin-bottom: 30px;">
                    <div class="col-8">
                        <h1 style="margin: 0; font-size: 24px; font-weight: 600; color: #333;">
                            Bon d'Achat - <span t-field="o.name"/>
                        </h1>
                        <div style="margin-top: 10px;">
                            <span style="display: inline-block; padding: 4px 12px; background-color: #2196F3; color: white; border-radius: 12px; font-size: 12px; font-weight: 500;">
                                <span t-if="o.state == 'draft'">Brouillon</span>
                                <span t-if="o.state == 'confirmed'">Confirmé</span>
                                <span t-if="o.state == 'paid'">Payé</span>
                                <span t-if="o.state == 'cancel'">Annulé</span>
                            </span>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div style="margin-bottom: 8px;">
                            <span style="color: #666; font-size: 13px;">Date:</span>
                            <span style="font-weight: 500; margin-left: 5px;" t-field="o.date_creation"/>
                        </div>
                        <div>
                            <span style="color: #666; font-size: 13px;">Date de Paiement:</span>
                            <span style="font-weight: 500; margin-left: 5px;">
                                <span t-if="o.date_payment" t-field="o.date_payment"/>
                                <span t-if="not o.date_payment">Non payé</span>
                            </span>
                        </div>
                    </div>
                </div>
                
                <!-- Informations société et fournisseur -->
                <div class="row mb-4">
                    <!-- Informations société -->
                    <div class="col-6" style="padding-right: 30px;">
                        <div style="margin-bottom: 15px;">
                            <div style="color: #666; font-size: 12px; margin-bottom: 5px;">Société</div>
                            <div style="font-weight: 600; font-size: 15px; margin-bottom: 8px;" t-if="company.name">
                                <span t-field="company.name"/>
                            </div>
                            <div style="color: #666; font-size: 13px; line-height: 1.6;">
                                <div t-if="company.street" t-esc="company.street or ''"/>
                                <div t-if="company.street2" t-esc="company.street2 or ''"/>
                                <div t-if="company.city" t-esc="company.city or ''"/>
                                <div t-if="company.vat" style="margin-top: 8px;">
                                    <strong>Code TVA:</strong> <span t-field="company.vat"/>
                                </div>
                                <div t-if="company.phone">
                                    <strong>Tél:</strong> <span t-field="company.phone"/>
                                </div>
                                <div t-if="company.email">
                                    <strong>Email:</strong> <span t-field="company.email"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Informations fournisseur -->
                    <div class="col-6" style="padding-left: 30px;">
                        <div style="margin-bottom: 15px;">
                            <div style="color: #666; font-size: 12px; margin-bottom: 5px;">Fournisseur</div>
                            <div style="font-weight: 600; font-size: 15px; margin-bottom: 8px;" t-if="o.supplier_id">
                                <span t-field="o.supplier_id.name"/>
                            </div>
                            <div style="color: #666; font-size: 13px; line-height: 1.6;">
                                <div t-if="o.supplier_id.street" t-esc="o.supplier_id.street or ''"/>
                                <div t-if="o.supplier_id.street2" t-esc="o.supplier_id.street2 or ''"/>
                                <div t-if="o.supplier_id.city" t-esc="o.supplier_id.city or ''"/>
                                <div t-if="o.supplier_id.vat" style="margin-top: 8px;">
                                    <strong>Code TVA:</strong> <span t-field="o.supplier_id.vat"/>
                                </div>
                                <div t-if="o.supplier_id.phone">
                                    <strong>Tél:</strong> <span t-field="o.supplier_id.phone"/>
                                </div>
                                <div t-if="o.supplier_id.email">
                                    <strong>Email:</strong> <span t-field="o.supplier_id.email"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Type d'achat -->
                <div class="row mb-4" t-if="o.purchase_type">
                    <div class="col-12">
                        <div style="color: #666; font-size: 12px; margin-bottom: 5px;">Type</div>
                        <div style="font-size: 13px;">
                            <span t-if="o.purchase_type == 'supplier'">Fournisseur</span>
                            <span t-if="o.purchase_type == 'hotel'">Hôtel</span>
                            <span t-if="o.purchase_type == 'platform'">Plateforme</span>
                        </div>
                    </div>
                </div>
                
                <!-- Tableau des services -->
                <div class="row mb-4" t-if="o.service_ids">
                    <div class="col-12">
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                            <thead>
                                <tr style="background-color: #f5f5f5; border-bottom: 2px solid #ddd;">
                                    <th style="padding: 12px 8px; text-align: left; font-weight: 600; font-size: 13px; color: #333;">Libellé</th>
                                    <th style="padding: 12px 8px; text-align: right; font-weight: 600; font-size: 13px; color: #333;">Prix</th>
                                    <th style="padding: 12px 8px; text-align: left; font-weight: 600; font-size: 13px; color: #333;">Type</th>
                                    <th style="padding: 12px 8px; text-align: right; font-weight: 600; font-size: 13px; color: #333;">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.service_ids" t-as="service">
                                    <tr style="border-bottom: 1px solid #e0e0e0;">
                                        <td style="padding: 12px 8px; font-size: 13px;">
                                            <div style="font-weight: 500;" t-esc="service.name or ''"/>
                                        </td>
                                        <td style="padding: 12px 8px; text-align: right; font-size: 13px;">
                                            <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="service.price"/>
                                        </td>
                                        <td style="padding: 12px 8px; font-size: 13px; color: #666;">
                                            <span t-if="service.type == 'hebergement'">Hébergement</span>
                                            <span t-if="service.type == 'transport'">Transport</span>
                                            <span t-if="service.type == 'activite'">Activité</span>
                                            <span t-if="service.type == 'autre'">Autre</span>
                                        </td>
                                        <td style="padding: 12px 8px; text-align: right; font-size: 13px; font-weight: 500;">
                                            <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="service.price"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <!-- Description -->
                <div class="row mb-4" t-if="o.description">
                    <div class="col-12" style="margin-top: 15px;">
                        <div style="color: #666; font-size: 12px; margin-bottom: 5px;">Description</div>
                        <div style="font-size: 13px; line-height: 1.6; color: #333;" t-esc="o.description"/>
                    </div>
                </div>
                
                <!-- Totaux -->
                <div class="row mt-4">
                    <div class="col-7"></div>
                    <div class="col-5">
                        <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                            <tr>
                                <td style="padding: 8px 0; text-align: right; font-size: 13px; color: #666;">Sous Total HT</td>
                                <td style="padding: 8px 0; text-align: right; font-size: 13px; font-weight: 500; padding-left: 20px; width: 120px;">
                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px 0; text-align: right; font-size: 13px; color: #666;">
                                    Montant TVA (<span t-esc="o.tax_rate"/>%)
                                </td>
                                <td style="padding: 8px 0; text-align: right; font-size: 13px; font-weight: 500; padding-left: 20px;">
                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.amount_tax"/>
                                </td>
                            </tr>
                            <tr style="border-top: 2px solid #333;">
                                <td style="padding: 12px 0; text-align: right; font-size: 15px; font-weight: 600;">Total TTC</td>
                                <td style="padding: 12px 0; text-align: right; font-size: 15px; font-weight: 600; padding-left: 20px;">
                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.amount_total"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" style="padding: 8px 0; border-top: 1px solid #e0e0e0;"></td>
                            </tr>
                            <tr>
                                <td style="padding: 8px 0; text-align: right; font-size: 13px; color: #666;">Taux Retenue</td>
                                <td style="padding: 8px 0; text-align: right; font-size: 13px; font-weight: 500; padding-left: 20px;">
                                    <span t-esc="str(o.withholding_rate) + '%'"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px 0; text-align: right; font-size: 13px; color: #666;">Montant Retenue</td>
                                <td style="padding: 8px 0; text-align: right; font-size: 13px; font-weight: 500; padding-left: 20px;">
                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.amount_withholding"/>
                                </td>
                            </tr>
                            <tr style="border-top: 2px solid #4CAF50; background-color: #f1f8f4;">
                                <td style="padding: 12px 0; text-align: right; font-size: 15px; font-weight: 600; color: #2e7d32;">Montant Servi</td>
                                <td style="padding: 12px 0; text-align: right; font-size: 15px; font-weight: 600; color: #2e7d32; padding-left: 20px;">
                                    <span t-options='{"widget": "monetary", "display_currency": o.currency_id}' t-field="o.amount_served"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                
                <!-- Informations supplémentaires -->
                <div class="row mt-4" style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #e0e0e0;">
                    <div class="col-6" t-if="o.reservation_id">
                        <div style="color: #666; font-size: 12px; margin-bottom: 8px; font-weight: 600;">Réservation liée</div>
                        <div style="font-size: 13px; line-height: 1.6;">
                            <span t-esc="o.reservation_id.name or ''"/>
                            <t t-if="o.reservation_id.member_id">
                                - <span t-esc="o.reservation_id.member_id.name or ''"/>
                            </t>
                        </div>
                    </div>
                    <div class="col-6" t-if="o.note">
                        <div style="color: #666; font-size: 12px; margin-bottom: 8px; font-weight: 600;">Notes</div>
                        <div style="font-size: 13px; line-height: 1.6; color: #333;" t-esc="o.note"/>
                    </div>
                </div>
            </div>
            </t>
            </t>
        </t>
    </template>
    
    <!-- Action de rapport -->
    <record id="action_report_travel_purchase" model="ir.actions.report">
        <field name="name">Achat Travel</field>
        <field name="model">travel.purchase</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">travel_pro_version1.report_travel_purchase</field>
        <field name="report_file">travel_pro_version1.report_travel_purchase</field>
    </record>
</odoo>
