<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste Voyages -->
    <record id="view_travel_tree" model="ir.ui.view">
        <field name="name">travel.tree</field>
        <field name="model">travel.destination</field>
        <field name="arch" type="xml">
            <tree string="Voyages" decoration-info="reservation_count > 0">
                <field name="name" string="‚úàÔ∏è Voyage"/>
                <field name="price" string="üíµ Prix/Personne" widget="monetary" decoration-bf="True"/>
                <field name="start_date" string="üõ´ D√©but"/>
                <field name="end_date" string="üõ¨ Fin"/>
                <field name="reservation_count" string="üìã R√©servations" decoration-bf="reservation_count > 0"/>
            </tree>
        </field>
    </record>
    
    <!-- Vue Formulaire Voyages -->
    <record id="view_travel_form" model="ir.ui.view">
        <field name="name">travel.form</field>
        <field name="model">travel.destination</field>
        <field name="arch" type="xml">
            <form string="Voyage">
                <sheet>
                    <!-- En-t√™te -->
                    <div class="oe_title mb-3">
                        <h1>
                            <field name="name" placeholder="Nom du voyage / destination" required="1" class="text-primary"/>
                        </h1>
                    </div>
                    
                    <!-- Section Description & P√©riode -->
                    <div class="row">
                        <div class="col-lg-6">
                            <group string="üìã Informations">
                                <field name="description" string="üìù Description" placeholder="Description du voyage..."/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group string="üìÖ P√©riode">
                                <field name="start_date" string="üõ´ Date D√©but"/>
                                <field name="end_date" string="üõ¨ Date Fin"/>
                            </group>
                        </div>
                    </div>
                    
                    <!-- Section Tarif & Services -->
                    <div class="row">
                        <div class="col-lg-6">
                            <group string="üí∞ TARIF">
                                <div class="alert alert-primary text-center py-3" role="alert">
                                    <h4 class="mb-0">Prix par Personne</h4>
                                    <h2 class="mb-0 text-primary fw-bold">
                                        <field name="price" widget="monetary" nolabel="1"/>
                                    </h2>
                                </div>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group string="üõéÔ∏è Services Inclus">
                                <field name="service_ids" widget="many2many_tags" nolabel="1" 
                                       options="{'color_field': 'color'}"/>
                            </group>
                        </div>
                    </div>
                    
                    <separator string="‚úàÔ∏è R√âSERVATIONS" class="mt-4"/>
                    
                    <!-- Section R√©servations -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-info fs-6 me-2">
                                        <field name="reservation_count"/> R√©servations
                                    </span>
                                </div>
                                <div>
                                    <button name="action_create_reservation" type="object" 
                                            string="‚ûï Nouvelle R√©servation" class="btn btn-primary btn-sm"/>
                                </div>
                            </div>
                            <field name="reservation_ids" nolabel="1">
                                <tree decoration-success="status == 'confirmed'" 
                                      decoration-info="status == 'done'" 
                                      decoration-muted="status == 'cancel'">
                                    <field name="name" string="üìã R√©f"/>
                                    <field name="member_id" string="üë§ Client"/>
                                    <field name="check_in" string="üõ¨ Arriv√©e"/>
                                    <field name="check_out" string="üõ´ D√©part"/>
                                    <field name="participants" string="üë• Pax"/>
                                    <field name="total_price" string="üíµ Total" widget="monetary"/>
                                    <field name="status" string="√âtat" widget="badge"/>
                                </tree>
                            </field>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Vue Kanban Voyages -->
    <record id="view_travel_kanban" model="ir.ui.view">
        <field name="name">travel.kanban</field>
        <field name="model">travel.destination</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="price"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="reservation_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details p-3">
                                <strong class="o_kanban_record_title fs-5 text-primary">
                                    ‚úàÔ∏è <field name="name"/>
                                </strong>
                                <div class="mt-2">
                                    <span class="badge bg-primary fs-6">
                                        üí∞ <field name="price" widget="monetary"/>
                                    </span>
                                </div>
                                <div class="mt-2 text-muted" t-if="record.start_date.value">
                                    üìÖ <field name="start_date"/> ‚Üí <field name="end_date"/>
                                </div>
                                <div class="mt-2">
                                    <span class="badge bg-info">
                                        üìã <field name="reservation_count"/> R√©servations
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vue Recherche -->
    <record id="view_travel_search" model="ir.ui.view">
        <field name="name">travel.search</field>
        <field name="model">travel.destination</field>
        <field name="arch" type="xml">
            <search string="Rechercher Voyages">
                <field name="name" string="Nom"/>
                <separator/>
                <filter string="üü¢ En cours" name="current" 
                        domain="[('start_date', '&lt;=', context_today().strftime('%Y-%m-%d')), ('end_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="üîµ √Ä venir" name="upcoming" 
                        domain="[('start_date', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="‚ö™ Pass√©s" name="past" 
                        domain="[('end_date', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Avec R√©servations" name="with_reservations" domain="[('reservation_ids', '!=', False)]"/>
                <separator/>
                <group expand="0" string="Grouper Par">
                    <filter string="Mois D√©but" name="group_month" context="{'group_by': 'start_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_travel" model="ir.actions.act_window">
        <field name="name">Voyages</field>
        <field name="res_model">travel.destination</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau voyage
            </p>
            <p>
                G√©rez vos destinations et voyages propos√©s aux clients avec les services inclus.
            </p>
        </field>
    </record>
</odoo>
