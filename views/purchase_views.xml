<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_form_inherit_travel" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.travel</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="reservation_id" domain="[('status', 'in', ['confirmed', 'done'])]"/>
                <field name="member_id" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>