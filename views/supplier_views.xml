<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire personnalisÃ©e pour les Fournisseurs Travel -->
    <record id="view_travel_supplier_form" model="ir.ui.view">
        <field name="name">travel.supplier.form</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Fournisseur">
                <sheet>
                    <field name="company_type" invisible="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="supplier_rank" invisible="1"/>
                    <field name="supplier_currency_id" invisible="1"/>
                    
                    <!-- En-tÃªte avec image et nom -->
                    <div class="oe_title mb-3">
                        <div class="d-flex align-items-start">
                            <field name="image_1920" widget="image" class="oe_avatar me-3" 
                                   options="{'preview_image': 'image_128'}"/>
                            <div class="flex-grow-1">
                                <h1 class="mb-0">
                                    <field name="name" placeholder="Nom du Fournisseur" required="1" 
                                           class="text-primary"/>
                                </h1>
                                <div class="mt-2">
                                    <field name="category_id" widget="many2many_tags" 
                                           placeholder="Tags..." options="{'color_field': 'color'}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Section 1: Contact & Adresse -->
                    <div class="row">
                        <div class="col-lg-6">
                            <group string="ğŸ“ CONTACT">
                                <field name="phone" string="TÃ©lÃ©phone" placeholder="+216 XX XXX XXX" widget="phone"/>
                                <field name="mobile" string="Mobile" placeholder="+216 XX XXX XXX" widget="phone"/>
                                <field name="email" string="Email" placeholder="email@exemple.com" widget="email"/>
                                <field name="website" string="Site Web" placeholder="www.exemple.com" widget="url"/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group string="ğŸ“ ADRESSE">
                                <field name="street" placeholder="Rue"/>
                                <field name="city" placeholder="Ville"/>
                                <field name="country_id" placeholder="Pays" options="{'no_create': True}"/>
                                <field name="vat" string="Matricule Fiscal" placeholder="1234567/A/M/000"/>
                            </group>
                        </div>
                    </div>
                    
                    <separator string="ğŸ›ï¸ SERVICES Ã€ FACTURER" class="mt-4"/>
                    
                    <!-- Section 2: Services Ã  facturer (comme facture client) -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-info fs-6 me-2">
                                        <field name="travel_service_count"/> Services du fournisseur
                                    </span>
                                </div>
                                <div>
                                    <button name="action_load_services" string="ğŸ”„ Charger Services" type="object" 
                                            class="btn btn-success btn-sm me-2"
                                            attrs="{'invisible': [('travel_service_count', '=', 0)]}"
                                            title="Charger automatiquement tous les services de ce fournisseur"/>
                                    <button name="action_create_service" string="â• CrÃ©er Service" type="object" 
                                            class="btn btn-primary btn-sm"/>
                                </div>
                            </div>
                            
                            <!-- Tableau de sÃ©lection des services (comme facture client) -->
                            <field name="supplier_invoice_service_ids" nolabel="1">
                                <tree editable="bottom" decoration-success="price > 0" decoration-info="type == 'hebergement'">
                                    <field name="name" string="ğŸ›ï¸ Service" options="{'no_create': True}"/>
                                    <field name="type" string="Type" widget="badge" readonly="1"/>
                                    <field name="destination_id" string="âœˆï¸ Destination" optional="show" readonly="1"/>
                                    <field name="room_price" string="ğŸ’µ Prix/Nuit" widget="monetary" optional="hide" readonly="1"/>
                                    <field name="price" string="ğŸ’° Prix" widget="monetary" sum="Total" readonly="1"/>
                                </tree>
                            </field>
                            
                            <p class="text-muted mt-2 small">
                                ğŸ’¡ <strong>Add a line</strong> : sÃ©lectionner un service existant | 
                                <strong>ğŸ”„ Charger Services</strong> : ajouter tous les services de ce fournisseur
                            </p>
                        </div>
                    </div>
                    
                    <separator string="ğŸ’° FACTURATION" class="mt-4"/>
                    
                    <!-- Section 3: Facturation -->
                    <div class="row">
                        <div class="col-lg-4">
                            <group string="ğŸ“Š MONTANTS">
                                <field name="supplier_service_id" invisible="1"/>
                                <field name="supplier_reservation_id" string="ğŸ“‹ RÃ©servation liÃ©e" 
                                       options="{'no_create': True}"/>
                                <div class="alert alert-info text-center py-2 mt-2">
                                    <span class="text-muted">ğŸ’µ Montant TTC (auto)</span>
                                    <h3 class="mb-0 text-info fw-bold">
                                        <field name="supplier_amount_ttc" nolabel="1"/> DT
                                    </h3>
                                </div>
                                <field name="supplier_tax_rate" string="ğŸ“ˆ Taux TVA"/>
                                <label for="supplier_fiscal_stamp" string="ğŸ›ï¸ Timbre Fiscal"/>
                                <div class="o_row">
                                    <field name="supplier_fiscal_stamp" nolabel="1" class="oe_inline"/>
                                    <span class="text-muted ms-1">DT</span>
                                </div>
                            </group>
                        </div>
                        <div class="col-lg-4">
                            <group string="ğŸ“ˆ CALCULS">
                                <field name="supplier_amount_untaxed" string="Montant HT" readonly="1"
                                       widget="monetary"/>
                                <field name="supplier_amount_tax" string="Montant TVA" readonly="1"
                                       widget="monetary"/>
                            </group>
                            <div class="alert alert-primary text-center py-3">
                                <span class="text-muted">ğŸ’µ Total Facture</span>
                                <h3 class="mb-0 text-primary fw-bold">
                                    <field name="supplier_amount_total" widget="monetary" nolabel="1"/>
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <group string="ğŸ“‰ RETENUE Ã€ LA SOURCE">
                                <field name="supplier_withholding_rate" string="Taux Retenue (%)"/>
                                <field name="supplier_amount_withholding" string="Montant Retenue" readonly="1"
                                       widget="monetary" class="text-danger"/>
                            </group>
                            <div class="alert alert-success text-center py-3">
                                <span class="text-muted">âœ… Montant Servi</span>
                                <h3 class="mb-0 text-success fw-bold">
                                    <field name="supplier_amount_served" widget="monetary" nolabel="1"/>
                                </h3>
                            </div>
                        </div>
                    </div>
                    
                    <separator string="ğŸ“ NOTES" class="mt-4"/>
                    
                    <!-- Section 4: Notes -->
                    <group>
                        <field name="supplier_description" string="Notes Facturation" 
                               placeholder="Notes sur la facturation..." nolabel="1"/>
                        <field name="comment" string="Notes GÃ©nÃ©rales" 
                               placeholder="Notes internes sur ce fournisseur..." nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste personnalisÃ©e pour les Fournisseurs -->
    <record id="view_travel_supplier_tree" model="ir.ui.view">
        <field name="name">travel.supplier.tree</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree string="Fournisseurs" decoration-info="travel_service_count > 0">
                <field name="name" string="ğŸ¢ Fournisseur"/>
                <field name="phone" string="ğŸ“ TÃ©lÃ©phone"/>
                <field name="email" string="âœ‰ï¸ Email"/>
                <field name="city" string="ğŸ“ Ville"/>
                <field name="travel_service_count" string="ğŸ›ï¸ Services"/>
                <field name="supplier_amount_total" string="ğŸ’° Total Facture" widget="monetary"/>
                <field name="supplier_amount_served" string="âœ… Montant Servi" widget="monetary"/>
            </tree>
        </field>
    </record>
    
    <!-- Vue Kanban personnalisÃ©e pour les Fournisseurs -->
    <record id="view_travel_supplier_kanban" model="ir.ui.view">
        <field name="name">travel.supplier.kanban</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="image_128"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
                <field name="travel_service_count"/>
                <field name="supplier_amount_served"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('res.partner', 'image_128', record.id.raw_value)" alt="Fournisseur"/>
                            </div>
                            <div class="oe_kanban_details p-2">
                                <strong class="o_kanban_record_title text-primary">
                                    ğŸ¢ <field name="name"/>
                                </strong>
                                <div t-if="record.phone.value" class="mt-1">
                                    ğŸ“ <field name="phone"/>
                                </div>
                                <div t-if="record.email.value">
                                    âœ‰ï¸ <field name="email"/>
                                </div>
                                <div t-if="record.city.value">
                                    ğŸ“ <field name="city"/>
                                </div>
                                <div class="mt-2">
                                    <span class="badge bg-primary">
                                        ğŸ›ï¸ <field name="travel_service_count"/> Services
                                    </span>
                                </div>
                                <div class="mt-1" t-if="record.supplier_amount_served.raw_value > 0">
                                    <span class="badge bg-success">
                                        ğŸ’° <field name="supplier_amount_served" widget="monetary"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue recherche personnalisÃ©e pour les Fournisseurs -->
    <record id="view_travel_supplier_search" model="ir.ui.view">
        <field name="name">travel.supplier.search</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <search string="Rechercher Fournisseurs">
                <field name="name" string="Nom"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
                <field name="vat" string="Matricule Fiscal"/>
                <separator/>
                <filter string="Avec Services" name="with_services" domain="[('travel_service_ids', '!=', False)]"/>
                <filter string="Sans Services" name="without_services" domain="[('travel_service_ids', '=', False)]"/>
                <separator/>
                <group expand="0" string="Grouper Par">
                    <filter string="Ville" name="group_city" context="{'group_by': 'city'}"/>
                    <filter string="Pays" name="group_country" context="{'group_by': 'country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les fournisseurs avec vues personnalisÃ©es -->
    <record id="action_supplier" model="ir.actions.act_window">
        <field name="name">Fournisseurs</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('supplier_rank', '>', 0)]</field>
        <field name="context">{
            'default_supplier_rank': 1, 
            'default_is_company': True,
            'default_company_type': 'company'
        }</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_travel_supplier_tree')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_travel_supplier_kanban')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_travel_supplier_form')})]"/>
        <field name="search_view_id" ref="view_travel_supplier_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                CrÃ©er un nouveau fournisseur
            </p>
            <p>
                GÃ©rez vos fournisseurs de services voyage : hÃ´tels, compagnies aÃ©riennes, 
                agences locales, etc. CrÃ©ez des services et suivez la facturation.
            </p>
        </field>
    </record>
</odoo>
