<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire étendue pour res.partner (Fournisseurs) -->
    <record id="view_partner_form_supplier" model="ir.ui.view">
        <field name="name">res.partner.form.supplier</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter un onglet Services dans le formulaire -->
            <xpath expr="//notebook" position="inside">
                <page string="Services Travel" name="travel_services">
                    <field name="supplier_rank" invisible="1"/>
                    <group>
                        <group>
                            <field name="travel_service_count" widget="statinfo" string="Nombre de Services"/>
                        </group>
                        <group>
                            <button name="action_create_service" string="Créer un Service" type="object" 
                                    class="oe_highlight" 
                                    attrs="{'invisible': [('supplier_rank', '=', 0)]}"/>
                            <button name="action_view_services" string="Voir les Services" type="object" 
                                    attrs="{'invisible': [('travel_service_count', '=', 0)]}"/>
                        </group>
                    </group>
                    <field name="travel_service_ids" nolabel="1" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="price"/>
                            <field name="destination_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Vue liste pour les fournisseurs -->
    <record id="view_partner_tree_supplier" model="ir.ui.view">
        <field name="name">res.partner.tree.supplier</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="travel_service_count" string="Services" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Action pour les fournisseurs -->
    <record id="action_supplier" model="ir.actions.act_window">
        <field name="name">Fournisseurs</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('supplier_rank', '>', 0)]</field>
        <field name="context">{'default_supplier_rank': 1, 'default_is_company': True, 'res_partner_search_mode': 'supplier'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau fournisseur
            </p>
            <p>
                Gérez vos fournisseurs et leurs services associés. 
                Vous pouvez créer des services pour chaque fournisseur et les utiliser dans vos achats travel.
            </p>
        </field>
    </record>
</odoo>
