<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste achats -->
    <record id="view_travel_purchase_tree" model="ir.ui.view">
        <field name="name">travel.purchase.tree</field>
        <field name="model">travel.purchase</field>
        <field name="arch" type="xml">
            <tree string="Achats Travel" decoration-info="state=='draft'" 
                  decoration-success="state=='paid'" decoration-muted="state=='cancel'"
                  decoration-warning="state=='confirmed'">
                <field name="name"/>
                <field name="date_creation"/>
                <field name="purchase_type"/>
                <field name="supplier_id"/>
                <field name="amount_untaxed" sum="Total HT"/>
                <field name="amount_tax" sum="Total TVA"/>
                <field name="amount_total" sum="Total TTC"/>
                <field name="amount_withholding" sum="Total Retenues"/>
                <field name="amount_served" sum="Total Servi"/>
                <field name="date_payment"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'" 
                       decoration-success="state=='paid'"
                       decoration-warning="state=='confirmed'"
                       decoration-danger="state=='cancel'"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire achats -->
    <record id="view_travel_purchase_form" model="ir.ui.view">
        <field name="name">travel.purchase.form</field>
        <field name="model">travel.purchase</field>
        <field name="arch" type="xml">
            <form string="Achat Travel">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" 
                            class="oe_highlight" states="draft"/>
                    <button name="action_set_paid" string="Marquer Payé" type="object" 
                            class="oe_highlight" states="confirmed"/>
                    <button name="action_extract_pdf_data" string="Extraire données PDF" type="object" 
                            attrs="{'invisible': [('invoice_pdf', '=', False)]}" states="draft"/>
                    <button name="action_cancel" string="Annuler" type="object" states="draft,confirmed"/>
                    <button name="action_draft" string="Remettre en brouillon" type="object" states="cancel"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="date_creation"/>
                            <field name="purchase_type"/>
                            <field name="supplier_id" options="{'no_create': True}"/>
                            <field name="reservation_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="date_payment"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Montants" name="amounts">
                            <group>
                                <group string="Montants de Base">
                                    <field name="amount_untaxed" widget="monetary"/>
                                    <field name="tax_rate"/>
                                    <field name="amount_tax" widget="monetary"/>
                                    <field name="amount_total" widget="monetary" 
                                           style="font-weight: bold;"/>
                                </group>
                                <group string="Retenue à la Source">
                                    <field name="withholding_rate"/>
                                    <field name="amount_withholding" widget="monetary"/>
                                    <field name="amount_served" widget="monetary" 
                                           style="font-weight: bold; color: green;"/>
                                </group>
                            </group>
                            
                            <group>
                                <field name="description" placeholder="Description de l'achat..."/>
                            </group>
                        </page>
                        
                        <page string="Facture PDF" name="invoice_pdf">
                            <group>
                                <field name="invoice_pdf" filename="invoice_pdf_filename" 
                                       widget="binary"/>
                                <field name="invoice_pdf_filename" invisible="1"/>
                            </group>
                            
                            <group string="Données Extraites" attrs="{'invisible': [('extracted_data', '=', False)]}">
                                <field name="extracted_data" readonly="1" nolabel="1"/>
                            </group>
                            
                            <div class="alert alert-info" role="alert" 
                                 attrs="{'invisible': [('invoice_pdf', '!=', False)]}">
                                <p><strong>Astuce :</strong> Attachez le PDF de la facture fournisseur. 
                                Le système tentera d'extraire automatiquement les données si le format est standard.</p>
                            </div>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="view_travel_purchase_search" model="ir.ui.view">
        <field name="name">travel.purchase.search</field>
        <field name="model">travel.purchase</field>
        <field name="arch" type="xml">
            <search string="Rechercher Achats">
                <field name="name" string="Numéro"/>
                <field name="supplier_id" string="Fournisseur"/>
                <field name="purchase_type" string="Type"/>
                <field name="date_creation"/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmés" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Payés" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Annulés" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter string="Fournisseurs" name="type_supplier" domain="[('purchase_type', '=', 'supplier')]"/>
                <filter string="Hôtels" name="type_hotel" domain="[('purchase_type', '=', 'hotel')]"/>
                <filter string="Plateformes" name="type_platform" domain="[('purchase_type', '=', 'platform')]"/>
                <separator/>
                <filter string="Avec PDF" name="with_pdf" domain="[('invoice_pdf', '!=', False)]"/>
                <filter string="Non payés" name="unpaid" domain="[('date_payment', '=', False)]"/>
                <group expand="0" string="Grouper Par">
                    <filter string="Type" name="group_type" context="{'group_by': 'purchase_type'}"/>
                    <filter string="Fournisseur" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                    <filter string="Date Création" name="group_date" context="{'group_by': 'date_creation'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_travel_purchase" model="ir.actions.act_window">
        <field name="name">Achats Travel</field>
        <field name="res_model">travel.purchase</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouvel achat
            </p>
            <p>
                Enregistrez vos achats auprès des fournisseurs, hôtels et plateformes.
                Vous pouvez attacher les factures PDF et le système extraira automatiquement les données si possible.
            </p>
        </field>
    </record>

</odoo>
