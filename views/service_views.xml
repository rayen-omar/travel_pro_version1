<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste Services -->
    <record id="view_service_tree" model="ir.ui.view">
        <field name="name">service.tree</field>
        <field name="model">travel.service</field>
        <field name="arch" type="xml">
            <tree string="Services" 
                  decoration-info="type == 'hebergement'" 
                  decoration-success="type == 'transport'"
                  decoration-warning="type == 'activite'">
                <field name="name" string="Service"/>
                <field name="type" string="Type" widget="badge"/>
                <field name="supplier_id" string="Fournisseur"/>
                <field name="destination_id" string="Destination" optional="show"/>
                <field name="room_price" string="Prix/Nuit" widget="monetary" optional="show"/>
                <field name="price" string="Prix Total" widget="monetary" sum="Total" decoration-bf="True"/>
            </tree>
        </field>
    </record>
    
    <!-- Vue Formulaire Services - Style Amélioré -->
    <record id="view_service_form" model="ir.ui.view">
        <field name="name">service.form</field>
        <field name="model">travel.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <!-- En-tête -->
                    <div class="oe_title mb-3">
                        <h1>
                            <field name="name" placeholder="Nom du service" required="1" class="text-primary"/>
                        </h1>
                    </div>
                    
                    <!-- Section Informations & Tarification -->
                    <div class="row">
                        <div class="col-lg-6">
                            <group string="Informations">
                                <field name="type" string="Type de Service" widget="radio" 
                                       options="{'horizontal': true}"/>
                                <field name="supplier_id" string="Fournisseur" 
                                       options="{'no_create': True}"
                                       domain="[('supplier_rank', '>', 0)]"/>
                                <field name="destination_id" string="Destination/Voyage" 
                                       options="{'no_create': True}"/>
                            </group>
                        </div>
                        <div class="col-lg-6">
                            <group string="Tarification">
                                <field name="room_price" string="Prix/Nuit" widget="monetary"
                                       attrs="{'invisible': [('type', '!=', 'hebergement')]}"/>
                                <div class="alert alert-primary text-center py-3">
                                    <h4 class="mb-0">Prix Total</h4>
                                    <h2 class="mb-0 text-primary fw-bold">
                                        <field name="price" widget="monetary" nolabel="1"/> DT
                                    </h2>
                                </div>
                            </group>
                        </div>
                    </div>
                    
                    <separator string="Notes" class="mt-4"/>
                    
                    <group>
                        <field name="note" placeholder="Notes et détails sur ce service..." nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vue Kanban Services -->
    <record id="view_service_kanban" model="ir.ui.view">
        <field name="name">service.kanban</field>
        <field name="model">travel.service</field>
        <field name="arch" type="xml">
            <kanban default_group_by="type">
                <field name="name"/>
                <field name="type"/>
                <field name="supplier_id"/>
                <field name="price"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details p-3">
                                <strong class="o_kanban_record_title fs-5 text-primary">
                                    <field name="name"/>
                                </strong>
                                <div class="mt-2">
                                    <field name="type" widget="badge"/>
                                </div>
                                <div class="text-muted mt-2" t-if="record.supplier_id.value">
                                    <field name="supplier_id"/>
                                </div>
                                <div class="mt-3">
                                    <span class="badge bg-success fs-6">
                                        <field name="price" widget="monetary"/> DT
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vue Recherche -->
    <record id="view_service_search" model="ir.ui.view">
        <field name="name">service.search</field>
        <field name="model">travel.service</field>
        <field name="arch" type="xml">
            <search string="Rechercher Services">
                <field name="name" string="Nom"/>
                <field name="type" string="Type"/>
                <field name="supplier_id" string="Fournisseur"/>
                <field name="destination_id" string="Destination"/>
                <separator/>
                <filter string="Hébergement" name="hebergement" domain="[('type', '=', 'hebergement')]"/>
                <filter string="Transport" name="transport" domain="[('type', '=', 'transport')]"/>
                <filter string="Activité" name="activite" domain="[('type', '=', 'activite')]"/>
                <filter string="Autre" name="autre" domain="[('type', '=', 'autre')]"/>
                <separator/>
                <group expand="0" string="Grouper Par">
                    <filter string="Type" name="group_type" context="{'group_by': 'type'}"/>
                    <filter string="Fournisseur" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                    <filter string="Destination" name="group_dest" context="{'group_by': 'destination_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">travel.service</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau service
            </p>
            <p>
                Gérez les services proposés par vos fournisseurs : hébergement, transport, activités, etc.
            </p>
        </field>
    </record>
</odoo>
