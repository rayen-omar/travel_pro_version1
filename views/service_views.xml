<odoo>
    <record id="view_service_tree" model="ir.ui.view">
        <field name="name">service.tree</field>
        <field name="model">travel.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="room_price"/>
                <field name="price"/>
                <field name="supplier_id"/>
                <field name="destination_id"/>
            </tree>
        </field>
    </record>
    
    <record id="view_service_form" model="ir.ui.view">
        <field name="name">service.form</field>
        <field name="model">travel.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="supplier_id"/>
                    </group>
                    <group>
                        <field name="room_price" attrs="{'invisible':[('type','!=','hebergement')]}"/>
                        <field name="price"/>
                        <field name="destination_id"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
