<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Configuration de la devise Dinar Tunisien (TND) -->
    <!-- Note: TND devrait déjà exister dans Odoo, mais on s'assure qu'il est actif -->
    <record id="base.TND" model="res.currency">
        <field name="name">TND</field>
        <field name="active" eval="True"/>
    </record>
    
    <!-- Note: Le changement de devise de la société est géré par post_init_hook -->
    <!-- pour éviter l'erreur si des écritures comptables existent déjà -->
</odoo>
