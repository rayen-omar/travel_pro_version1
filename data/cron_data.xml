<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Cron pour fermer automatiquement la caisse principale à minuit -->
    <record id="cron_close_main_cash_at_midnight" model="ir.cron">
        <field name="name">Fermeture Automatique Caisse Principale à Minuit</field>
        <field name="model_id" ref="model_cash_register"/>
        <field name="state">code</field>
        <field name="code">model.cron_close_main_cash_at_midnight()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="doall" eval="False"/>
    </record>
</odoo>
